<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/_5sdp"
    android:paddingRight="@dimen/_3sdp"
    android:paddingBottom="@dimen/_5sdp"
    tools:ignore="RtlSymmetry">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvRootView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:strokeWidth="@dimen/_1sdp"
        android:elevation="@dimen/_15sdp"
        tools:targetApi="lollipop"
        app:strokeColor="#F0F0F0"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:scaleType="fitXY"
                android:elevation="@dimen/_5sdp"
                android:contentDescription="@string/img_desc"
                tools:targetApi="lollipop" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_12sdp">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_8sdp"
           android:paddingStart="@dimen/_5sdp"
           android:paddingLeft="@dimen/_5sdp"
           android:paddingEnd="@dimen/_5sdp">
           <TextView
               android:id="@+id/tv_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/life_individual"
               android:textSize="@dimen/_6sdp"
               tools:ignore="RelativeOverlap"
               android:textColor="@color/black"/>

           <TextView
               android:id="@+id/tv_amount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="1000"
               android:textSize="@dimen/_6sdp"
               android:textColor="@color/black"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true" />
       </RelativeLayout>
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:textSize="@dimen/_6sdp"
                android:text="Life Insurance - Individual Policy" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp">
                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/size"
                    android:textSize="@dimen/_6sdp"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/tv_size_type" android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Regular"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/tv_size"
                    android:layout_toRightOf="@+id/tv_size"
                    android:paddingLeft="@dimen/_2sdp"
                    tools:ignore="RtlSymmetry"
                    android:textSize="@dimen/_6sdp"
                    android:layout_centerVertical="true"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_addToCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:strokeColor="@color/lightBlue"
                    app:strokeWidth="@dimen/_1sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    tools:ignore="RelativeOverlap">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_to_cart"
                        android:padding="@dimen/_3sdp"
                        android:textSize="@dimen/_6sdp"
                        android:textColor="@color/lightBlue"/>
                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>