<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingLeft="@dimen/_12sdp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1"
            android:textSize="@dimen/_8sdp"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            tools:text="Life-individual"
            android:textSize="@dimen/_8sdp"
            android:paddingStart="@dimen/_22sdp"
            android:paddingLeft="@dimen/_22sdp"
            android:layout_toEndOf="@id/tv_title"
            android:layout_toRightOf="@id/tv_title"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            tools:text="Life-individual sjjhshdjshjshd"
            android:textSize="@dimen/_8sdp"
            android:layout_toEndOf="@id/tv_title"
            android:layout_toRightOf="@id/tv_title"
            android:paddingStart="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:singleLine="false"
            tools:ignore="RtlSymmetry"/>
        <TextView
            android:id="@+id/tv_unit_price"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            tools:text="1000"
            android:textSize="@dimen/_8sdp"
            android:layout_toEndOf="@id/tv_desc"
            android:layout_toRightOf="@id/tv_desc"
            android:paddingStart="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/iv_item_image"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_60sdp"
            android:contentDescription="@string/img_desc"
            android:scaleType="fitXY"
            android:src="@drawable/insurance2"
            android:layout_toEndOf="@+id/tv_unit_price"
            android:layout_toRightOf="@+id/tv_unit_price"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:strokeColor="@color/lightBlue"
            app:strokeWidth="@dimen/_1sdp"
            android:layout_toEndOf="@+id/iv_item_image"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toRightOf="@+id/iv_item_image"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_6sdp"
                android:textColor="@color/lightBlue"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingEnd="@dimen/_8sdp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:strokeColor="@color/orange"
            app:strokeWidth="@dimen/_1sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_toEndOf="@id/cv_edit"
            android:layout_toRightOf="@id/cv_edit"
            android:layout_marginLeft="@dimen/_4sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:textSize="@dimen/_6sdp"
                android:textColor="@color/orange"/>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/divider_color"
        android:layout_marginTop="@dimen/_5sdp"/>

</LinearLayout>
</layout>